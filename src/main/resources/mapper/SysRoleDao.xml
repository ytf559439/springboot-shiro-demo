<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lzy.springbootshiro.dao.SysRoleDao">

    <!-- 查询用户角色集合 -->
    <select id="selectSysRoleByUserId"  parameterType="long" resultType="com.lzy.springbootshiro.entity.SysRole" >
        SELECT sr.* FROM sys_role sr
        LEFT JOIN sys_user_role se ON sr.role_id=se.role_id
        WHERE se.user_id = #{userId}
    </select>

</mapper>